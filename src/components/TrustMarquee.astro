---
// Trust Marquee Section Component
const logos = [
    { src: "/501078072_17845169487488494_8059935198862646351_n (1).jpg", alt: "Client Logo 1" },
    { src: "/515577617_18049221800529987_6480858581698957919_n (1).jpg", alt: "Client Logo 2" },
    { src: "/541611017_18073535726038934_5794692521640028942_n.jpg", alt: "Client Logo 3" },
    { src: "/558262699_17847145893573011_2645595788778119117_n.jpg", alt: "Client Logo 4" },
    { src: "/image (2).png", alt: "Client Logo 5" },
    { src: "/image (5).png", alt: "Client Logo 6" },
    { src: "/image (6).png", alt: "Client Logo 7" },
    { src: "/image (7).png", alt: "Client Logo 8" },
    { src: "/image (8).png", alt: "Client Logo 9" },
    { src: "/image (9).png", alt: "Client Logo 10" },
];
---

<section class="trust-section">
    <div class="container">
        <p style="margin-bottom: 32px; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 2px; color: var(--text-muted); font-weight: 700; opacity: 0.7;">Dipercaya oleh</p>
        
        <div class="marquee-wrapper">
            <div class="marquee-track">
                <!-- Group 1 -->
                <div class="logo-group">
                    {logos.map((logo) => (
                        <div class="logo-item">
                            <img src={logo.src} alt={logo.alt} class="client-logo" />
                        </div>
                    ))}
                </div>
                 <!-- Group 2 (Duplicate for loop) -->
                 <div class="logo-group">
                    {logos.map((logo) => (
                        <div class="logo-item">
                            <img src={logo.src} alt={logo.alt} class="client-logo" />
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .trust-section {
        border-top: 1px solid var(--border-light);
        border-bottom: 1px solid var(--border-light);
        padding: 40px 0;
        text-align: center;
        background: white;
        overflow: hidden;
    }
    .marquee-wrapper {
        position: relative;
        overflow: hidden;
        width: 100%;
        mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
        -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    }
    .marquee-track {
        display: flex;
        width: max-content;
        animation: marquee-scroll 30s linear infinite;
    }
    .logo-group {
        display: flex;
        gap: 60px;
        padding-right: 60px;
    }
    .client-logo {
        height: 48px;
        width: auto;
        object-fit: contain;
        opacity: 1;
        transition: all 0.3s ease;
    }
    .logo-item {
        display: flex;
        align-items: center;
        padding: 0 10px;
    }
    .logo-item:hover .client-logo {
        transform: scale(1.05);
    }
    @keyframes marquee-scroll {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }
</style>
