---
// UGC Gallery Component - Vertical Video Showcase
const ugcVideos = [
    {
        title: "KOC Review #1",
        brand: "Lifestyle Brand",
        videoUrl: "https://minio.feldi.web.id/feldi/Savetik-Net_7585103640726375688.mp4",
        category: "Beauty"
    },
    {
        title: "KOC Review #2",
        brand: "Food & Beverage",
        videoUrl: "https://minio.feldi.web.id/feldi/Savetik-Net_7581819801299914004_v3.mp4",
        category: "Lifestyle"
    },
    {
        title: "KOC Review #3",
        brand: "Daily Essentials",
        videoUrl: "https://minio.feldi.web.id/feldi/Savetik-Net_7575865515394993428_v3.mp4",
        category: "Consumer"
    },
    {
        title: "KOC Review #4",
        brand: "Skincare Selection",
        videoUrl: "https://minio.feldi.web.id/feldi/Savetik-Net_7577712071534595348_v3.mp4",
        category: "Beauty"
    }
];
---

<section class="ugc-section">
    <div class="container">
        <div class="section-header">
            <span class="badge" style="background: #000; color: #fff; border:none; margin-bottom: 12px; font-size: 0.75rem;">Portfolio</span>
            <h2>UGC in Action</h2>
            <p>Lihat bagaimana KOC kami menciptakan konten autentik yang mengonversi audiens menjadi pembeli.</p>
        </div>

        <div class="ugc-grid">
            {ugcVideos.map((video) => (
                <div class="video-card">
                    <div class="video-container">
                        <video 
                            autoplay 
                            muted 
                            loop 
                            playsinline
                            webkit-playsinline
                            preload="metadata"
                            style="width: 100%; height: 100%; object-fit: cover;"
                        >
                            <source src={video.videoUrl} type="video/mp4" />
                            Your browser does not support the video tag.
                        </video>
                        <div class="video-overlay">
                            <span class="category-tag">{video.category}</span>
                        </div>
                    </div>
                    <div class="video-info">
                        <h4>{video.title}</h4>
                        <p>{video.brand}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .ugc-section {
        padding: 60px 0; /* Match Comparison padding height and removed horizontal 24px */
        background: white;
        border-top: 1px solid var(--border-light);
    }

    .section-header {
        margin-bottom: 60px;
        max-width: 600px;
    }

    .section-header h2 {
        font-size: 2rem;
        margin-bottom: 16px;
    }

    .section-header p {
        color: var(--text-muted);
        font-size: 1.1rem;
    }

    .ugc-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 24px;
    }

    .video-card {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .video-container {
        position: relative;
        aspect-ratio: 9 / 16;
        background: #000;
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .video-container video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.9;
        transition: opacity 0.3s;
    }

    .video-card:hover video {
        opacity: 1;
    }

    .video-overlay {
        position: absolute;
        top: 16px;
        left: 16px;
        z-index: 2;
    }

    .category-tag {
        background: rgba(255, 255, 255, 0.9);
        color: #000;
        padding: 4px 12px;
        border-radius: 100px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .video-info h4 {
        font-size: 1.1rem;
        margin-bottom: 4px;
    }

    .video-info p {
        font-size: 0.9rem;
        color: var(--text-muted);
        margin: 0;
    }

    @media (max-width: 1024px) {
        .ugc-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 640px) {
        .ugc-grid {
            display: flex;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
            gap: 16px;
            padding: 0 24px 24px 24px;
            margin: 0 -24px; /* Counter-act container padding if any */
            scrollbar-width: none; /* Hide scrollbar Firefox */
        }
        .ugc-grid::-webkit-scrollbar {
            display: none; /* Hide scrollbar Chrome/Safari */
        }
        .video-card {
            flex: 0 0 75%; /* Show 1.25 cards to signal scroll */
            scroll-snap-align: center;
        }
        .ugc-section {
            padding: 60px 0;
            overflow: hidden;
        }
        .section-header {
            margin-bottom: 32px;
        }
        .section-header h2 {
            font-size: 1.75rem;
        }
    }
</style>
